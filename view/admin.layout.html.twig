<!doctype html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    {% block stylesheet %} 
    {% endblock %}
    <title>{{ siteName }}</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <img style="width: 60px; height: 60px;" src="{{ assets('/assets/img/logo.png') }}" alt="logo">
                <a class="navbar-brand" href="#">RentCar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-0 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('admin.home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('car.add') }}">Ajouter
                                véhicule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('marque.add') }}">Ajouter
                                marque</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('car.list') }}">Liste des
                                véhicules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('list.marque') }}">Liste des
                                marques</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li>
                            <a class="nav-link active" aria-current="page" href="{{ path('admin.logout') }}">Deconnexion</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <main>

        {% if hasToast() %}

            {% for toast in renderToast() %}
            {{ toast|raw }}
            {# raw a revoir : Attention faille XSS #}
            {% endfor %}

        {% endif %}


        {% block body %}
        <!-- inserer page içi -->
        {% endblock %}

    </main>
    <footer class="bg-dark w-100 d-flex justify-content-center align-items-center" style="height: 80px;">
        <small style="color: white;">Powered by {{ siteName }} © Copyright 2023</small>
    </footer>
</body>

</html>